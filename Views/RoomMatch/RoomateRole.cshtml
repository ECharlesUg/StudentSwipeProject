@{
    ViewData["ShowNav"] = false;
    ViewData["Title"] = "Select Your Role";
}

<section class="role-selection">
    <h2 class="text-center">SELECT YOUR ROLE</h2>

    <form asp-action="SelectRole" method="post" class="role-form">
        <div class="role-options">
            <label class="role-card">
                <input type="radio" name="selectedRole" value="SeekingHousing" required />
                <img class="role-img" src="https://cdn.pixabay.com/photo/2016/11/01/03/28/magnifier-1787362_1280.png" alt="Looking for housing" />
                <a asp-controller="Profile" asp-action="RoomateProfile"><p>I'm looking for housing</p></a>
            </label>

            <label class="role-card">
                <input type="radio" name="selectedRole" value="WithHousing" required />      
                <img class="role-img" src="https://cdn.pixabay.com/photo/2016/04/01/10/11/avatar-1299805_1280.png" alt="I have housing" />
                <a asp-controller="Profile" asp-action="RoomateProfile"><p>I have Housing</p></a>
            </label>
        </div>

        <div class="button-group">
            <a class="profile-btn" asp-controller="Profile" asp-action="RoomateProfile">Return to StudentSwipe</a>
        </div>
    </form>
</section>

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .role-selection {
        padding: 50px 20px;
        max-width: 900px;
        margin: auto;
    }

    .text-center {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 30px;
        font-weight: bold;
    }

    .role-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .role-options {
        display: flex;
        gap: 40px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .role-card {
        background-color: #d398d8;
        border-radius: 20px;
        border: 1px solid #6c30ff;
        padding: 40px 20px;
        width: 200px;
        height: 240px;
        text-align: center;
        color: black;
        font-weight: bold;
        position: relative;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .role-card:hover {
            background: linear-gradient(90deg, #9d3ff1, #ff52fd, #6c30ff);
        }

        .role-card input[type="radio"] {
            display: none;
        }

    .role-img {
        width: 100px;
        height: 100px;
        object-fit: contain;
        margin-bottom: 20px;
        background-color: #9d3ff1;
    }

    .role-card p {
        margin: 0;
        font-size: 1rem;
    }

    .button-group {
        display: flex;
        gap: 20px;
        flex-direction: column;
        align-items: center;
    }

    .profile-btn {
        display: inline-block;
        border-radius: 30px;
        border: none;
        background-color: #6c30ff;
        color: black;
        border: 2px solid black;
        font-size: 14px;
        font-weight: bold;
        padding: 12px 35px;
        text-transform: uppercase;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .profile-btn:hover {
            background: linear-gradient(90deg, #9d3ff1, #ff52fd, #6c30ff);
        }

        .profile-btn.secondary {
            background-color: #6c30ff;
            color: black;
            border: 2px solid black;
        }

        .profile-btn.secondary:hover {
            background-color: #ddd;
        }
</style>
