@model StudentSwipe.Models.Profile

<link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet" />
<section class="section purple-bg" id="about">
    <div class="container">
        <h2>My Profile</h2>

        @if (TempData["LoginSuccess"] != null)
        {
            <div class="alert alert-success" role="alert" style="margin-top: 15px;">
                @TempData["LoginSuccess"]
            </div>
        }

        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">@Model.FullName</h3>
                    <h6 class="theme-color lead">@Model.UserType</h6>
        <div class="profile-wrapper" style="background-color: #fff; border-radius: 15px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); display: flex; flex-wrap: wrap; padding: 40px;">

            <div class="col-lg-4" style="text-align: center; flex: 1;">
                @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                {
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-picture" />
                }
                else
                {
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Default Avatar" class="profile-picture" />
                }
            </div>

            <div class="col-lg-8" style="flex: 2;">
                <div class="about-text">
                    <h3 class="dark-color" style="color:black">@Model.FullName</h3>
                    <h6 class="theme-color lead" style="color:#6c30ff">@Model.UserType</h6>
                    <div class="row about-list">
                        <div class="col-md-6">
                        @*     <div class="media">
                                <label>Age</label>
                                <p>@Model.Age</p>
                            </div> *@
                            <div class="media">
                                <label>Study Preferences</label>
                                <p>@Model.StudyPreferences</p>
                            </div>
                            @if(Model.UserType == "University")
                            {
                                <div class="media">
                                    <label>Courses</label>
                                    <p>@Model.UniCourses</p>
                                </div>

                                    <div class="media">
                                    <label>Uni Level</label>
                                    <p>@Model.UniversityYear</p>
                                </div>

                            }
                           
                            @if(Model.UserType == "HighSchool")
                            {
                                <div class="media">
                                    <label>Courses</label>
                                    <p>@Model.HSCourses</p>
                                </div>

                                    <div class="media">
                                    <label>Grade Level</label>
                                    <p>@Model.Grade</p>
                                </div>

                            }
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>Interests</label>
                                <p>@Model.Interests</p>
                            </div>
                            <div class="media">
                                <label>Profile</label>
                                <p>Active</p>
                            </div>
                        </div>q
                    </div>

          
                        <button type="submit" class="create-button" style="width: 100%;">
                            <a asp-action="CreateOrEdit" >
                            Edit My Profile
                            </a>
                        </button>
                        

                    <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure you want to delete your account?');" style="margin-top: 20px;">
                        <button type="submit" class="delete-button">Delete My Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

